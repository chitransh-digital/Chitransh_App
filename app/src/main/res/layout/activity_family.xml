            android:layout_gravity="center"/>

        <Button
            android:id="@+id/family_registration_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"
