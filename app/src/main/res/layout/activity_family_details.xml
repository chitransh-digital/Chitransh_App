                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/preview_landmarkInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:text="@string/address"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/preview_Karya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preview_Add"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.9">

                <TextView
                    android:id="@+id/preview_Karyatext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/karyakarni2"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/preview_Karyainput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:text="@string/karyakarni"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/preview_edu_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preview_Karya"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.9">

                <TextView
                    android:id="@+id/preview_leveltext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/highest_education_colon"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/preview_edu_level_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:padding="10dp"
                    android:text="Bachelors"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/preview_edu_department"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preview_edu_level"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.9">

                <TextView
                    android:id="@+id/preview_edu_depart_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/branch"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/preview_edu_depart_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:hint="@string/branch_name"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/preview_edu_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preview_edu_department"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.9">

                <TextView
                    android:id="@+id/preview_edu_course_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_colon"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/preview_edu_course_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:hint="@string/course_colon"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/preview_edu_institute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preview_edu_course"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.9">

                <TextView
                    android:id="@+id/preview_edu_institute_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insitute"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/preview_edu_institute_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:hint="@string/insitute_name"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/preview_edu_additionalDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preview_edu_institute"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.9">

                <TextView
                    android:id="@+id/preview_edu_additional_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/additional_details"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/preview_edu_additional_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:hint="@string/any_details_want_to_mentioned"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/preview_occu_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preview_edu_additionalDetails"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.9">

                <TextView
                    android:id="@+id/preview_occuleveltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/job_field"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/preview_occu_level_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:padding="10dp"
                    android:hint="@string/job_level"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/preview_occu_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preview_occu_level"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.9">

                <TextView
                    android:id="@+id/preview_occu_positiontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/job_post_colon"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/preview_occu_positioninput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:hint="@string/post"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/preview_occu_department"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preview_occu_position"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.9">

                <TextView
                    android:id="@+id/preview_occu_department_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
